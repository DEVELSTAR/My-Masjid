<div class="login">
  <div class="login-logo">
    <img src="https://cdn.vectorstock.com/i/preview-1x/85/21/masjid-e-nababi-shareef-vector-44508521.webp">
    <h2>My-Masjid</h2>
  </div>
  <div class="login-box">
    <h2>Forgot your password?</h2>
    <div class="login-fields">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "fieldt" %>
        </div>

        <div class="actions">
          <%= f.submit "Send password", class: "login-btn"  %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="links"><%= render "devise/shared/links" %></div>
</div>
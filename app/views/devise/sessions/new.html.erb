<div class="login">
  <div class="login-logo">
    <img src="https://cdn.vectorstock.com/i/preview-1x/85/21/masjid-e-nababi-shareef-vector-44508521.webp">
    <h2>My-Masjid</h2>
  </div>
  <div class="without-login-link"><%= link_to 'Go Without Login', root_path %></div>
  <div class="login-box">
    <h2>LOGIN</h2>
    <div class="login-fields">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "fieldl" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "fieldt"  %>
        </div>

        <div class="field">
          <%= f.label :password, class: "fieldl" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "fieldt" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Login" ,class: "login-btn" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="links"><%= render "devise/shared/links" %></div>
</div>
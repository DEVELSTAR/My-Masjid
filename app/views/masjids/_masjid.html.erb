<% @masjids.each do |m| %>
  <div class="masjid">
    <div><%= link_to m.name.titleize, masjid_path(m), class: "name" %></div>
    <div class="gray">address: <%= m.village.humanize  %> <%= m.city  %></div>
    <div>
        <% if user_signed_in? %>
          <% if current_user.is_admin?  || m.sub_admin == current_user.sub_admin && current_user.sub_admin.present? %>
             <%= link_to "Edit", edit_masjid_path(m) %>
           <% end %>
         <% end %>
    </div>
  </div>
<% end %>

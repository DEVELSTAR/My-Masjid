<div class="users-show">
	<div class="user-show">
		<div><strong>Name: </strong><%= @user.name  %></div>
		<% if @user.is_admin? %>
		<div><strong>Title: </strong>Admin</div>
		<% end %>
		<div><strong>Phone no:</strong><%= @user.phone  %></div>
		<div><strong>Token: </strong><%= @user.sub_admin ? @user.sub_admin : "unavalaible" %></div>
	    <div><% if @user.imam.present? %>
				<div><strong>Qualifications: </strong>kari</div>
				<div><strong>Experience: </strong>2 years</div>
				<div><strong>Address: </strong><%= @user.village.humanize  %> <%= @user.city  %></div>
				<div>
					<% if @user == current_user %>			  
					  <strong>Status:</strong>
					  <% User::STATUSES.each do |status| %>
					    <%= link_to_unless @user.status.eql?(status.to_s), status, update_status_user_path(@user, status: status), data: {turbo_method: :put} %>
					  <% end %>
					<% end %>
				</div>
			<% else %>
				<div><strong>Address: </strong><%= @user.village.humanize  %> <%= @user.city  %></div>
		    <% end %>
		</div>
		<div><% if current_user.is_admin?  || current_user == @user  %>
			   <%= link_to "Edit", edit_user_path(@user) %>
			 <% end %>
	    </div>
</div>